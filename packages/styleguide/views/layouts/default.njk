<!DOCTYPE html>
<html lang="{{ app.meta.lang }}" dir="{{ app.meta.dir }}">
<head>
  <meta charset="{{ app.meta.charset }}">
  <meta name="viewport" content="{{ app.meta.viewport }}">

  {%- block preStyles %}{% endblock %}
  {%- block styles %}
  {% for url in app.stylesheets | stack -%}
  <link rel="stylesheet" href="{{ resourceUrl(url) }}">
  {%- endfor %}
  {% endblock -%}
  {%- block postStyles %}{% endblock -%}

  <title>{% block title %}{% if page.title %}{{ page.title }} | {% endif %}{{ app.meta.title }}{% endblock %}</title>
</head>
<body>

{%- block preBody %}{% endblock %}
{% block body %}
<div class="fr-layout">
  <div class="fr-layout__sidebar fr-sidebar">
  {% block sidebar %}

    <header class="fr-branding">
    {% block header %}
    {% include "partials/branding" %}
    {% endblock %}
    </header>

    <nav class="fr-nav">
    {% block navigation %}
    {% include "partials/navigation" %}
    {% endblock %}
    </nav>

  {% endblock %}
  </div>
  <main class="fr-layout__main fr-main">
  {% block main %}{% endblock %}
  </main>
</div>
{% endblock %}
{%- block postbody %}{% endblock %}

{%- block preScripts %}{% endblock %}
{%- block scripts %}
{% for url in app.scripts | stack -%}
<script src="{{ resourceUrl(url) }}"></script>
{%- endfor %}
{% endblock -%}
{%- block postScripts %}{% endblock -%}

</body>
</html>
