<!DOCTYPE html>
<html lang="{{ app.meta.lang }}" dir="{{ app.meta.dir }}">
<head>
  <meta charset="{{ app.meta.charset }}">
  <meta name="viewport" content="{{ app.meta.viewport }}">

  {%- block preStyles %}{% endblock %}
  {%- block styles %}
  {% for url in app.stylesheets | resolveStack -%}
  <link rel="stylesheet" href="{{ resourceUrl(url) }}">
  {%- endfor %}
  {% endblock -%}
  {% if app.css.length %}
  <style>{{ app.css | join(`\n`) }}</style>
  {% endif %}
  {% block postStyles %}{% endblock -%}
  
  <title>{% block title %}{% if page.title %}{{ page.title }} | {% endif %}{{ app.meta.title }}{% endblock %}</title>
</head>
<body>

<div id="app">
{%- block preBody %}{% endblock %}
{% block body %}{% endblock %}
{%- block postbody %}{% endblock %}
</div>

{%- block preScripts %}{% endblock %}
{%- block scripts %}
{% for url in app.scripts | resolveStack -%}
<script src="{{ resourceUrl(url) }}"></script>
{%- endfor %}
{% endblock -%}
{% if app.js.length %}<script>{{ app.js | join(`\n`) }}</script>{% endif %}
{%- block postScripts %}{% endblock -%}

</body>
</html>
