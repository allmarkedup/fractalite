{% extends "layouts/default" %}

{% block main %}

<div class="fr-inspector">

  <div class="fr-inspector__header">
    <h1 class="fr-inspector__title">{{ component.label }} / {{ variant.label }}</h1>
    <ul class="fr-actions">
      <li class="fr-actions__action">
        {% for action in app.inspector.actions %}
        <a class="fr-actions__link" href="{{ action.url | resolve }}">{{ action.label | resolve }}</a>
        {% endfor %}
      </li>
    </ul>
  </div>

  <div class="fr-inspector__preview">
    <iframe src="{{ variant.previewUrl }}" frameborder="0" class="fr-preview"></iframe>
  </div>

  <div class="fr-inspector__info">
    <ul class="fr-tabs fr-inspector__tabs">
      {% for panel in app.inspector.panels %}
        {% if panel.display | resolve %}
        <li class="fr-tabs__tab">
          <a href="#">{{ panel.label | resolve }}</a>
        </li>
        {% endif %}
      {% endfor %}
    </ul>
    <div class="fr-panels fr-inspector__panels">
    {% for panel in app.inspector.panels %}
      {% if panel.display | resolve %}
      <div class="fr-panels__panel">
        {{ panel.content | resolve | render | safe  }}
      </div>
      {% endif %}
    {% endfor %}
    </div>
  </div>

</div>
{% endblock %}
