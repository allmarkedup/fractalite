{% macro navTree(items) %}
<ul>
{% for item in items %}
  <li>
    <span>{{ item.label }}</span>
    {% if item.children %}
      {{ navTree(item.children) }}
    {% endif %}
  </li>
{% endfor %}
</ul>
{% endmacro %}

