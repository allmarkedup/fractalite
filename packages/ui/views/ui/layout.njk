<!DOCTYPE html>
<html lang="{{ site.lang }}" dir="{{ site.dir }}">
<head>
  <meta charset="{{ site.charset }}">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {% block reload %}{% include "ui/reload" %}{% endblock %}

  {%- block preStyles %}{% endblock %}
  {%- block styles %}
  {% include "ui/stylesheets" %}
  {% endblock -%}
  {%- block postStyles %}{% endblock -%}

  <title>{% block title %}{% if page.title %}{{ page.title }} | {% endif %}{{ site.title }}{% endblock %}</title>
</head>
<body>

{%- block preBody %}{% endblock %}
{%- block body %}{% endblock %}
{%- block postbody %}{% endblock %}

{%- block preScripts %}{% endblock %}
{%- block scripts %}
{% include "ui/scripts" %}
{% endblock -%}
{%- block postScripts %}{% endblock -%}

</body>
</html>
