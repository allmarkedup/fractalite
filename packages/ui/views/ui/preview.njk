{% extends "ui/layout" %}

{% block styles %}
{%- for url in stylesheets -%}
<link rel="stylesheet" href="{{ url }}">
{% endfor -%}
{% endblock %}

{% block title %}{{ component.label }}{% if variant %} / {{ variant.label }}{% endif %}{% endblock %}

{%- block body %}{{ content | safe }}{% endblock %}

{%- block scripts %}
{%- for url in scripts -%}
<script src="{{ url }}"></script>
{% endfor -%}
{% endblock -%}
