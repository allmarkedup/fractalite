{% extends "ui/layout" %}

{% set page = {
  title: 'An error occured'
} %}

{% block styles %}
<link rel="stylesheet" href="{{ asset('ui:ui.css') }}">
{% endblock %}

{% block body %}
<div class="fr-wrapper fr-error">
  <div class="fr-content">
    <h1>An error occured.</h1>
    <p>
      {% if error.status %}<span>{{ error.status }}:</span>{% endif %}
      <span>{{ error.message }}</span>
    </p>
  </div>
</div>
{% endblock %}
