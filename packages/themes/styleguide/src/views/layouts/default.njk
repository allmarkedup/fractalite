{% import "ui/macros" as macros -%}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  {% include "ui/stylesheets" %}

  <title>{% if page.title %}{{ page.title }} | {% endif %}{{ site.title }}</title>
</head>
<body>

{% block body %}

{% set components = state.components | collect %}
{% set pages = state.pages | collect %}

<div class="container">

  <nav class="nav">
    {% block sidebar %}
    <div class="nav__section">
      <ul class="tree">
        <li>
          <a href="{{ route('index') }}">Overview</a>
        </li>
      </ul>
    </div>
    {% if pages.length %}
    <div class="nav__section">
      <h4 class="nav__label">Docs</h4>
      {{ macros.tree('pages', pages | tree) }}
    </div>
    {% endif %}
    {% if components.length %}
    <div class="nav__section">
      <h4 class="nav__label">Components</h4>
      {{ macros.tree('components', components | tree) }}
    </div>
    {% endif %}
    {% endblock %}
  </nav>

  <main class="content">
  {% block main %}{% endblock %}
  </main>

</div>
{% endblock %}

{% include "ui/scripts" %}
{% include "ui/reload" %}

</body>
</html>
