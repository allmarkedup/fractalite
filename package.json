{
  "private": true,
  "devDependencies": {
    "@frctl/eslint-config-frctl": "^0.1.3",
    "lerna": "^3.4.0",
    "ow": "^0.8.0",
    "xo": "^0.23.0"
  },
  "name": "fractalite",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint:fix": "xo --fix",
    "test": "xo && lerna run test",
    "styleguide:build": "cd packages/styleguide && npm run build",
    "styleguide:dev": "cd packages/styleguide && npm run dev",
    "demo:nunjucks": "npm run bootstrap && cd demos/nunjucks && npm run start"
  },
  "xo": {
    "extends": "@frctl/eslint-config-frctl",
    "prettier": true,
    "spaces": true,
    "rules": {
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "err"
        }
      ]
    },
    "ignores": [
      "**/dist/*",
      "**/assets/*",
      "**/test/**",
      "./demo/**"
    ]
  }
}
